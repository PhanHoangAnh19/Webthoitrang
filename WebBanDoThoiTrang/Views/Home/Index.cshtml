@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh sách sản phẩm</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <!-- Font Awesome (cho icon trái tim) -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
          
        
</head>
<body>

        <div class="my-slider">
            <button class="my-slider__btn prev">&lsaquo;</button>
            <div class="my-slider__viewport">
                <div class="my-slider__track">
                    <img src="~/images/slide5.png" alt="Slide 1" class="my-slider__slide" />
                    <img src="~/images/slide6.png" alt="Slide 2" class="my-slider__slide" />
                </div>
            </div>
            <button class="my-slider__btn next">&rsaquo;</button>
        </div>
        <!-- Tiêu đề trang -->
        <h2 class="mb-4"> TỔNG SẢN PHẨM</h2>

        <!-- Grid sản phẩm -->
        <div class="row g-4">
            <div class="col-6 col-md-4 col-lg-3">
                <div class="product-card">
                    <span class="badge-discount">-15%</span>
                    <button class="btn-wishlist">
                        <i class="far fa-heart"></i>
                    </button>
                    <img src="~/images/test.webp" alt="Sản phẩm 1">
                    <div class="info">
                        <div class="title">Váy midi kaki sọc 2 túi viền bèo</div>
                        <div class="price">
                            386,750₫
                            <span class="old-price">455,000₫</span>
                        </div>
                        <div class="colors">
                            <span class="dot" style="background:#c9a478"></span>
                            <span class="dot active" style="background:#fff"></span>
                        </div>
                    </div>
                </div>
            </div>  
        </div>

    <div class="row g-4">
        <div class="col-6 col-md-4 col-lg-3">
            <div class="product-card">
                <span class="badge-discount">-15%</span>
                <button class="btn-wishlist">
                    <i class="far fa-heart"></i>
                </button>
                <img src="~/images/test.webp" alt="Sản phẩm 1">
                <div class="info">
                    <div class="title">Váy midi kaki sọc 2 túi viền bèo</div>
                    <div class="price">
                        386,750₫
                        <span class="old-price">455,000₫</span>
                    </div>
                    <div class="colors">
                        <span class="dot" style="background:#c9a478"></span>
                        <span class="dot active" style="background:#fff"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-6 col-md-4 col-lg-3">
            <div class="product-card">
                <span class="badge-discount">-15%</span>
                <button class="btn-wishlist">
                    <i class="far fa-heart"></i>
                </button>
                <img src="~/images/test.webp" alt="Sản phẩm 1">
                <div class="info">
                    <div class="title">Váy midi kaki sọc 2 túi viền bèo</div>
                    <div class="price">
                        386,750₫
                        <span class="old-price">455,000₫</span>
                    </div>
                    <div class="colors">
                        <span class="dot" style="background:#c9a478"></span>
                        <span class="dot active" style="background:#fff"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
       
     @RenderSection("DanhSachSanPham");
    </div>

    <!-- Bootstrap 5 JS và Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

