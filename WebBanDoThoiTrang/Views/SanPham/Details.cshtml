@model WebBanDoThoiTrang.Models.SanPham
@{
    ViewData["Title"] = Model.TenSanPham;
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row g-4">
        <div class="col-md-6">
            <img src="@Model.HinhAnh" alt="@Model.TenSanPham" class="img-fluid rounded" />
        </div>
        <div class="col-md-6">
            <h2 class="mb-3">@Model.TenSanPham</h2>
            <p class="mb-4">@Model.MoTa</p>

            <div class="mb-4">
                <span class="text-muted text-decoration-line-through me-2">
                    @Model.GiaCu?.ToString("N0")₫
                </span>
                <span class="fs-4 fw-bold text-danger">
                    @Model.DonGia.ToString("N0")₫
                </span>
            </div>

            <form asp-controller="GioHang"
                  asp-action="ThemVaoGioHang"
                  asp-route-id="@Model.MaSanPham"
                  method="post">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-cart-plus me-1"></i> Thêm vào giỏ
                </button>
            </form>
        </div>
    </div>
</div>
